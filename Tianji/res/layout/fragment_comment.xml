<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/comment_allRe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/dotted_line" >

        <TextView
            android:id="@+id/comment_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="应用评分"
            android:textColor="#555"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment_allSoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff694f"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_allSoreText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#999"
            android:textSize="9sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/comment_allRe" >

        <ImageView
            android:id="@+id/comment_startIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/starbg" />

        <RelativeLayout
            android:id="@+id/comment_re1"
            android:layout_width="fill_parent"
            android:layout_height="11dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/comment_startIm" >

            <ProgressBar
                android:id="@+id/comment_ScoreBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:max="100"
                android:maxHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_drawable" />

            <TextView
                android:id="@+id/comment_ScoreText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_ScoreBar1"
                android:textColor="#999"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_re2"
            android:layout_width="fill_parent"
            android:layout_height="11dp"
            android:layout_below="@id/comment_re1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/comment_startIm" >

            <ProgressBar
                android:id="@+id/comment_ScoreBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:max="100"
                android:maxHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_drawable" />

            <TextView
                android:id="@+id/comment_ScoreText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_ScoreBar2"
                android:textColor="#999"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_re3"
            android:layout_width="fill_parent"
            android:layout_height="11dp"
            android:layout_below="@id/comment_re2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/comment_startIm" >

            <ProgressBar
                android:id="@+id/comment_ScoreBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:max="100"
                android:maxHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_drawable" />

            <TextView
                android:id="@+id/comment_ScoreText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_ScoreBar3"
                android:textColor="#999"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_re4"
            android:layout_width="fill_parent"
            android:layout_height="11dp"
            android:layout_below="@id/comment_re3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/comment_startIm" >

            <ProgressBar
                android:id="@+id/comment_ScoreBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:max="100"
                android:maxHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_drawable" />

            <TextView
                android:id="@+id/comment_ScoreText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_ScoreBar4"
                android:textColor="#999"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_re5"
            android:layout_width="fill_parent"
            android:layout_height="11dp"
            android:layout_below="@id/comment_re4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/comment_startIm" >

            <ProgressBar
                android:id="@+id/comment_ScoreBar5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:max="100"
                android:maxHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_drawable" />

            <TextView
                android:id="@+id/comment_ScoreText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_ScoreBar5"
                android:textColor="#999"
                android:textSize="9sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_textcoment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_allRe"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="全部评论"
        android:textColor="#999"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/comment_textcoment"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#e9e9e9" />

    <com.utils.pulltorefresh.PullToRefreshListView
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginBottom="50dp"
        android:divider="#50ffffff" >
    </com.utils.pulltorefresh.PullToRefreshListView>

    <RelativeLayout
        android:id="@+id/cmment_re"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#fff" >

        <Button
            android:id="@+id/comment_replyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button"
            android:text="俺来评论~"
            android:textColor="#fff" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/cmment_re"
       android:background="#ddd"/>

</RelativeLayout>