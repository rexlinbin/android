<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#575E72"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="7dp"
            android:text="详情"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/main_left_re"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true" >

            <Button
                android:id="@+id/btn_open_menu"
                android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_mycomments_back"
                android:layout_alignParentLeft="true"
               
                android:layout_marginTop="4dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp" >

        <RelativeLayout
            android:id="@+id/details_titleRe"
            android:layout_width="fill_parent"
            android:layout_height="90dp" >

            <ImageView
                android:id="@+id/main_list_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/main_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/main_list_image"
                android:textColor="#fff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/main_list_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/main_list_title"
                android:background="@drawable/score_frame"
                android:textColor="#ffb400"
                android:gravity="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/main_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_list_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/main_list_image"
                android:textColor="#33ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/main_list_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_list_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/main_list_time"
                android:textColor="#33ffffff"
                android:textSize="12sp" />
  <ImageView
            android:id="@+id/main_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_list_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/main_list_image"
            android:background="@drawable/index_download" />

        <TextView
            android:id="@+id/main_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_list_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/main_list_icon"
            android:textColor="#33ffffff"
            android:textSize="12sp" />

            <TextView
                android:id="@+id/main_list_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_list_content"
                  android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/main_list_num"
               
                android:textColor="#33ffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/details_titleRe"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/details_intro_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#565460"
                    android:text="简介"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/line_imageView"
                    android:layout_width="120dp"
                    android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
                  
                    android:src="@drawable/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/details_comment_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#565460"
                    android:text="评论"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/line_imageView2"
                   android:visibility="invisible"
                      android:layout_width="120dp"
                    android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
                    android:src="@drawable/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/details_requst_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#565460"
                    android:text="硬件要求"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/line_imageView3"
               android:visibility="invisible"
                    android:layout_width="120dp"
                    android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
                  
                    
                    android:src="@drawable/line" />
            </LinearLayout>
        </LinearLayout>

      
    </RelativeLayout>
  <android.support.v4.view.ViewPager
            android:id="@+id/details_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </android.support.v4.view.ViewPager>
</LinearLayout>