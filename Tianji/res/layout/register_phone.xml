<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#585E72" >

        <ImageButton
            android:id="@+id/Back"
              android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_mycomments_back"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="手机注册"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
         android:textSize="13sp"
        android:text="我们将发送验证码到你的手机"
        android:textColor="#cccccccc" />

    <EditText
        android:id="@+id/register_tellEdit"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:background="@drawable/regist_userinfo_bg"
        android:hint="输入手机号"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:phoneNumber="true"
        android:textColor="#cccccccc"
        android:textSize="13sp"
        android:textColorHint="#cccccccc" />

    <TextView
        android:id="@+id/register_errText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:text="我们将发送验证码到你的手机"
        android:textColor="#f0a900"
        android:textSize="11sp" />

    <Button
        android:id="@+id/register_nextbtn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logbtn_selector"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>