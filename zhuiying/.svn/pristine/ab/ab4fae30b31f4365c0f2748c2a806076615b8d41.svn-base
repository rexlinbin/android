<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/head_bg" >

        <ImageButton
            android:id="@+id/titel_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/selector_back" />

        <ImageView
            android:id="@+id/titel_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/logo2"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/titel_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/selector_search"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/titel_collect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/collect"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/titel_history"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/history"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/titel_sort"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/check"
                android:visibility="gone" />

            <TextView
                android:id="@+id/titel_clear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center"
                android:text="清除"
                android:textColor="#fff"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#fff"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>