<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView
            android:id="@+id/select_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_downloadselect"
            android:visibility="gone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >
        <RelativeLayout
            android:id="@+id/his_re"
            android:layout_width="162.5dp"
            android:layout_height="95dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
               android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="#30ffffff" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
             
                android:scaleType="centerCrop"
                android:src="@drawable/default720380" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
           android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/his_re" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
               
               
                android:textColor="#000"
                android:textSize="15sp" />
 <TextView
                android:id="@+id/textE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:singleLine="true"
              
                android:textColor="#777"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
              
              android:layout_toRightOf="@id/textE"
                android:textColor="#777"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>