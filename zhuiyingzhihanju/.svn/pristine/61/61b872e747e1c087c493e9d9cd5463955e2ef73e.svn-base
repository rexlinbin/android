<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res/com.bccv.zhuiyingzhihanju"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listitem_Vre"
        android:layout_width="125dp"
        android:layout_height="71dp"
        android:layout_centerVertical="true" >

        <com.utils.views.RoundedImageView
            android:id="@+id/listitem_Vinfo_image"
            android:layout_width="125dp"
            android:layout_height="71dp"
           app:corner_radius="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fuzzy_background" />

        <TextView
            android:id="@+id/listitem_Vinfo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:textColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/listitem_Vre"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listitem_Vinfo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#191919"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listitem_Vinfo_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>