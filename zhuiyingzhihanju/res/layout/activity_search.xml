<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/back_textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/selector_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/search_textView"
            android:layout_toRightOf="@+id/back_textView" >

            <EditText
                android:id="@+id/search_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_graycorner"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:hint="请输入..."
                android:imeOptions="actionSearch"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#777"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="13sp" >
            </EditText>

            <ImageView
                android:id="@+id/delete_imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="10dp"
                android:src="@drawable/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/search_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="搜索"
            android:textColor="@color/green"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/searchInfo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.utils.views.MyScrollViewh
                android:id="@+id/myScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="大家都在搜"
                        android:textColor="#9c9c9c"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/hot_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/hot_textView1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchred"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#ff6976"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/hot_textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchorg"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#ff9369"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/hot_textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchgre"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#9fd037"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hot_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/hot_textView4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchgray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#9c9c9c"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/hot_textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchgray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#9c9c9c"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/hot_textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_hotsearchgray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="#9c9c9c"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="搜索历史"
                            android:textColor="#9c9c9c"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/clear_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/search_clear"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="#9c9c9c"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <com.utils.views.MyListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none" >
                    </com.utils.views.MyListView>

                    <TextView
                        android:id="@+id/hot_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="热门推荐"
                        android:textColor="#9c9c9c"
                        android:textSize="15sp" />

                    <com.utils.views.MyListView
                        android:id="@+id/hot_listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none" >
                    </com.utils.views.MyListView>
                </LinearLayout>
            </com.utils.views.MyScrollViewh>
        </LinearLayout>

        <com.utils.views.MyScrollViewh
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/star_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="明星"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <com.utils.views.HorizontalListView
                        android:id="@+id/horizontalListView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" >
                    </com.utils.views.HorizontalListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="韩剧"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/more"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="更多"
                        android:textColor="#7ac057"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/variety_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="韩综"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/variety_more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/more"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="更多"
                        android:textColor="#7ac057"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/movie_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="韩影"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/movie_more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/more"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="更多"
                        android:textColor="#7ac057"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/music_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="音乐"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/music_more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/more"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="更多"
                        android:textColor="#7ac057"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/news_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="资讯"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/news_more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/more"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="更多"
                        android:textColor="#7ac057"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </com.utils.views.MyScrollViewh>

        <TextView
            android:id="@+id/none_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="未搜索到结果"
            android:textColor="#9c9c9c"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>