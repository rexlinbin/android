<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          >

            <ImageView
                android:id="@+id/item_special_image"
                android:layout_width="fill_parent"
                android:layout_height="101dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default720380" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
             
            android:background="@drawable/img_float" />
            <TextView
                android:id="@+id/item_special_update"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/item_special_image"
                android:layout_alignRight="@+id/item_special_image"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_special_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:textColor="#191919"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:gravity="left"
              android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_special_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#999"
                android:singleLine="true"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
