<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.bccv.zhuiyingzhihanju">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" 
        android:layout_marginBottom="15dp" 
        android:layout_marginRight="15dp" >

        <com.utils.views.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="125dp"
            android:layout_height="71dp"
            android:src="@drawable/default720380"
            android:scaleType="fitXY"
            app:corner_radius="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="标题"
                android:textColor="#191919"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/intro_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title_textView"
                android:text="简介"
                android:textColor="#999"
                android:textSize="12sp" />

          

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
