<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/type_imageView"
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:src="@drawable/default720380" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="6.5dp" >

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/user_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableLeft="@drawable/zt_con_up"
                android:drawablePadding="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/num_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="共0部"
                    android:textColor="#999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hit_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="播放0次"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_whitecorner"
                android:drawableLeft="@drawable/zt_comment_icon"
                android:layout_marginTop="7dp"
                android:drawablePadding="5dp"
                android:padding="4dp"
                android:text="评论"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#777"
        android:textSize="12sp"
        android:layout_marginTop="15dp" />

</LinearLayout>