<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical" >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/downloadTitle_textView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="第一卷"
                    android:textColor="#999"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/size_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22MB"
                    android:textColor="#bbb"
                    android:textSize="11sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/download_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:focusable="false"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar_download" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downloadState_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/download_stop_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/check_box_stop"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>