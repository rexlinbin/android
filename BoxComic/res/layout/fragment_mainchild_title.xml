<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="25dp"
   android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           
   >
     <ImageView
            android:id="@+id/frament_main_yuceIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
      
            android:background="@drawable/record" />
    <TextView
        android:id="@+id/frament_main_yuceText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="13sp"
           android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/frament_main_yuceIm"
         />
<ImageView 
    android:id="@+id/frament_main_Image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/frament_main_yuceText1"

    android:layout_marginLeft="6dp"
    android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/frament_main_readTag1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/frament_main_Image"
        android:textColor="#aaa"
        android:textSize="13sp"
        android:singleLine="true"
          android:layout_centerVertical="true"
         />
</RelativeLayout>
</RelativeLayout>