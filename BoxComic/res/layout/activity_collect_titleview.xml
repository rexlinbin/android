<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
   android:background="#ff3746" 
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/activity_collect_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/home_attention_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_collect_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/home_hot_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_collect_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/home_fresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </RelativeLayout>
    </LinearLayout>
      
</RelativeLayout>