<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <Button
        android:id="@+id/common_edit_cancel"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/add_app_left_selector"
        android:gravity="center"
        android:text="@string/app_left"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/common_edit_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <Button
        android:id="@+id/common_edit_confirm"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/add_app_left_selector"
        android:gravity="center"
        android:text="@string/app_right"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>