<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strategy_item_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/strategy_item_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/strategy_item_iv" >

            <TextView
                android:id="@+id/strategy_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="为爱而战《墨之刃》四大单身攻略玩法"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/strategy_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/gl_zan"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="10"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/strategy_item_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/strategy_item_zan"
                android:drawableLeft="@drawable/gl_pinglun"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="363"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/strategy_item_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/strategy_item_zan"
                android:layout_below="@id/strategy_item_title"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="为爱而战《墨之刃》四大单身攻略玩法"
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/strategy_item_iv"
            android:background="#e0e0e0" />
    </RelativeLayout>

</FrameLayout>