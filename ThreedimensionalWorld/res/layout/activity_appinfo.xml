                        android:layout_marginTop="150dp"
                        android:textSize="24sp"
                        android:text="0%"
                        android:textColor="#8fffffff"
                        android:visibility="invisible" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

