                                            android:id="@+id/left_ratingBar"
                                            style="@style/MyRatingBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="-30dp"
                                            android:isIndicator="true"
                                            android:numStars="5" />

