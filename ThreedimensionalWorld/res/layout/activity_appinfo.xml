                                        android:id="@+id/left_imageView1"
                                        android:layout_width="280dp"
                                        android:layout_height="360dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/game_b_default_half"
                                        android:scaleType="fitXY" />

                                    <ImageView
