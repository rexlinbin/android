<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/bg_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/bgtest" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg2" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <com.bccv.threedimensionalworld.view.MyTitleView
                    android:id="@+id/left_myTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-60dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="120dp" >

                                <ImageView
                                    android:id="@+id/left_movie_ImageView"
                                    android:layout_width="165dp"
                                    android:layout_height="480dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/movie_default"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:id="@+id/left_moviebg_imageView"
                                    android:layout_width="172.5dp"
                                    android:layout_height="495dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/movielist_image" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="120dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/left_title_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="46sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="40dp"
                                    android:gravity="center_vertical" >

                                    <RatingBar
                                        android:id="@+id/left_ratingBar"
                                        style="@style/MyRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-30dp"
                                        android:isIndicator="true"
                                        android:numStars="5" />

                                    <TextView
                                        android:id="@+id/left_score_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-60dp"
                                        android:text=""
                                        android:textColor="#ffab59"
                                        android:textSize="46sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp" >

                                    <Button
                                        android:id="@+id/left_play_button"
                                        android:layout_width="140dp"
                                        android:layout_height="96dp"
                                        android:background="@drawable/movieinfo_play"
                                        android:text="" />

                                    <Button
                                        android:id="@+id/left_collect_button"
                                        android:layout_width="110dp"
                                        android:layout_height="96dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/movieinfo_collect"
                                        android:text="" />

                                    <Button
                                        android:id="@+id/left_intro_button"
                                        android:layout_width="110dp"
                                        android:layout_height="96dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/movieinfo_intro" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/left_roles_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="60dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/left_director_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/left_type_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/left_area_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/left_year_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/left_info_layout"
                        android:layout_width="525dp"
                        android:layout_height="440dp"
                        android:layout_marginTop="450dp"
                        android:layout_marginLeft="235dp"
                        android:orientation="vertical"
                        android:background="@drawable/introducti_bg"
                        android:visibility="invisible" >


                        <TextView
                            android:id="@+id/left_info_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="-200dp"
                            android:layout_marginRight="-200dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="32sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants"
            android:visibility="visible"
            android:background="@drawable/bg2" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

          

                <com.bccv.threedimensionalworld.view.MyTitleView
                    android:id="@+id/right_myTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-60dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="120dp" >

                                <ImageView
                                    android:id="@+id/right_movie_ImageView"
                                    android:layout_width="165dp"
                                    android:layout_height="480dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/movie_default"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:id="@+id/right_moviebg_imageView"
                                    android:layout_width="172.5dp"
                                    android:layout_height="495dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/movielist_image" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="120dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/right_title_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="46sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="40dp"
                                    android:gravity="center_vertical" >

                                    <RatingBar
                                        android:id="@+id/right_ratingBar"
                                        style="@style/MyRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-30dp"
                                        android:isIndicator="true"
                                        android:numStars="5" />

                                    <TextView
                                        android:id="@+id/right_score_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-60dp"
                                        android:text=""
                                        android:textColor="#ffab59"
                                        android:textSize="46sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp" >

                                    <Button
                                        android:id="@+id/right_play_button"
                                        android:layout_width="140dp"
                                        android:layout_height="96dp"
                                        android:background="@drawable/movieinfo_play"
                                        android:text="" />

                                    <Button
                                        android:id="@+id/right_collect_button"
                                        android:layout_width="110dp"
                                        android:layout_height="96dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/movieinfo_collect"
                                        android:text="" />

                                    <Button
                                        android:id="@+id/right_intro_button"
                                        android:layout_width="110dp"
                                        android:layout_height="96dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/movieinfo_intro" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/right_roles_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="60dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/right_director_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/right_type_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/right_area_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/right_year_textView"
                                    android:layout_width="1050dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginLeft="-260dp"
                                    android:text=""
                                    android:textColor="#fff"
                                    android:textSize="32sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/right_info_layout"
                        android:layout_width="525dp"
                        android:layout_height="440dp"
                        android:layout_marginTop="450dp"
                        android:layout_marginLeft="235dp"
                        android:orientation="vertical"
                        android:background="@drawable/introducti_bg"
                        android:visibility="invisible" >

                        <TextView
                            android:id="@+id/right_info_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="-200dp"
                            android:layout_marginRight="-200dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="32sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>