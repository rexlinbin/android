<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" >

            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/leftbg" />

                    <com.bccv.threedimensionalworld.view.MyTitleView
                        android:id="@+id/left_myTitleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/left_back_button"
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:background="@drawable/moviesearch_back" />

                    <TextView
                        android:id="@+id/left_search_button"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="93dp"
                        android:background="@drawable/dialog_edit_selector"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="" />
                    <TextView
                        android:id="@+id/left_searchinfo_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/left_search_button"
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"
                        android:text="请输入影片首字母，如要搜索变形金刚，则输入bxjg" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/leftbg" />

                    <com.bccv.threedimensionalworld.view.MyTitleView
                        android:id="@+id/right_myTitleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/right_back_button"
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:background="@drawable/moviesearch_back"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                    <TextView
                        android:id="@+id/right_search_button"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="93dp"
                        android:gravity="center"
                        android:background="@drawable/dialog_edit_selector"
                        android:textSize="30sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/right_searchinfo_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/right_search_button"
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"
                        android:text="请输入影片首字母，如要搜索变形金刚，则输入bxjg" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myKeyBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#c3c5c8" >

            <com.bccv.threedimensionalworld.view.MyKeyBoard
                android:id="@+id/left_myKeyBoard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#c3c5c8"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" >
            </com.bccv.threedimensionalworld.view.MyKeyBoard>

            <com.bccv.threedimensionalworld.view.MyKeyBoard
                android:id="@+id/right_myKeyBoard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#c3c5c8"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" >
            </com.bccv.threedimensionalworld.view.MyKeyBoard>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>