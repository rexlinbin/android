<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="2.5dp"
    android:paddingLeft="2.5dp"
    android:background="#191919"
    android:orientation="vertical" >
       
          <com.bccv.meitu.view.ScaleImageView
            android:id="@+id/special_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test" />
           
          <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#64000000"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">
                 <LinearLayout
                    android:id="@+id/home_like_ll"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
                   	android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
            		android:orientation="horizontal">
                   <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@drawable/home_like"/>
                   <TextView 
                    android:id="@+id/home_like_num"
                   	android:layout_width="20dp"
            		android:layout_height="wrap_content"
            		android:layout_marginLeft="2dp"
            		android:textSize="9sp"
            		android:textColor="#ffffff"
            		android:text="1231"/>
               </LinearLayout>
               
               <LinearLayout
                   	android:layout_toLeftOf="@id/home_like_ll"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                   	android:layout_marginRight="10dp"
                   	android:layout_centerVertical="true"
            		android:orientation="horizontal">
                  <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@drawable/home_comment"/>
                  <TextView 
                    android:id="@+id/home_comment_num"
                   	android:layout_width="20dp"
            		android:layout_height="wrap_content"
            		android:layout_marginLeft="2dp"
            		android:textSize="9sp"
            		android:textColor="#ffffff"
            		android:text="1231"/>
               </LinearLayout>
          </RelativeLayout>
          
          <LinearLayout 
              android:layout_width="wrap_content"
           	  android:layout_height="wrap_content"
              android:layout_alignParentBottom="true">
	          <ImageView
	            android:id="@+id/home_headpic"
	            android:layout_width="45dp"
	            android:layout_height="45dp"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/home_headpic_9"
	            android:src="@drawable/user_logo"
	            android:padding="2dp"/>
          </LinearLayout>
          
</RelativeLayout>
